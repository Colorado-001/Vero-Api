{
  "name": "vero-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "clean:common": "rimraf dist-common",
    "build:common": "npm run clean:common && tsc --project tsconfig.modules.json",
    "start:api": "NODE_ENV=production node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "typeorm": "npm run build:common && ts-node ./node_modules/typeorm/cli.js --dataSource ./dist-common/infrastructure/typeorm/typeorm-cli-data-source.js",
    "typeorm:migrate": "npm run typeorm -- migration:run && npm run clean:common ",
    "typeorm:generate": "npm run typeorm -- migration:generate ./src/infrastructure/typeorm/migrations/migration && npm run clean:common",
    "typeorm:revert": "npm run typeorm -- migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@metamask/delegation-toolkit": "^0.13.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  }
}
